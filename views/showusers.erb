<table class="table table-striped">  
    <thead>
       <tr>        
            <th>Имя</th>
            <th>Телефон</th>
            <th>Дата и запись</th>
            <th>Парикмахер</th>
            <th>Цвет</th>
        </tr> 
    </thead>
    <body>
        <% @results.each do |row| %>
            <tr>        
                <td><%= row['username'] %></td>
                <td><%= row['phone'] %></td>
                <td><%= row['datestamp'] %></td>
                <td><%= row['barber'] %></td>
                <td style="background-color:<%= row['color'] %>"><%=row['color'] %></td>  <!-- отображает номер цвета цветом-->
            </tr> 
        <% end %>
    </body>
</table>  



